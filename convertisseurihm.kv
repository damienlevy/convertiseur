#:kivy 1.1.0

Root:

    FloatLayout:
        orientation: 'vertical'
        Button:
            # pos: 100, 100
            pos_hint: {'x': .3, 'y': .2}
            size_hint: 0.3, 0.1
            text: 'jpg -> png'
            on_release: root.show_jpg_to_png()
        Button:
            pos_hint: {'x': .3, 'y': .4}
            # pos: 100, 200
            size_hint: 0.3, 0.1
            text: 'pdf -> png'
            on_release: root.show_pdf_to_png()
        Button:
            pos_hint: {'x': .3, 'y': .6}
            # pos: 100, 300
            size_hint: 0.3, 0.1
            text: 'png -> jpg'
            on_release: root.show_png_to_jpg()



<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)